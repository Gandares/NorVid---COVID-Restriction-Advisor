<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/bbddtext"
        android:layout_width="94dp"
        android:layout_height="59dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restriction"
        android:layout_width="312dp"
        android:layout_height="47dp"
        android:layout_marginTop="60dp"
        android:text="Cargando restricciÃ³n..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bbddtext" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restriction" />

    <TextView
        android:id="@+id/ccaa"
        android:layout_width="278dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:text="Cargando CCAA..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savebutton" />

    <TextView
        android:id="@+id/prov"
        android:layout_width="277dp"
        android:layout_height="45dp"
        android:layout_marginTop="88dp"
        android:text="Cargando provincia..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savebutton" />

    <TextView
        android:id="@+id/mun"
        android:layout_width="276dp"
        android:layout_height="62dp"
        android:layout_marginTop="140dp"
        android:text="Cargando municipio..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savebutton" />

    <TextView
        android:id="@+id/address"
        android:layout_width="278dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:text="Cargando calle..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mun" />

    <TextView
        android:id="@+id/tdq"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="80dp"
        android:text="Toque de queda:"
        app:layout_constraintEnd_toStartOf="@+id/bbddtext"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>